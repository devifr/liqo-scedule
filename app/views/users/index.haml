.container
  .panel.panel-default
    .panel-heading
      %h3.panel-title List Anggota
    .panel-body
      = link_to 'New', new_user_path, class: 'btn btn-default'
      %table.table.table-hover.table-bordered.table-striped
        %thead
          %tr
            %th
              Code
            %th
              Name
            %th
              Email
            %th
              Phone
            %th
              Action
        %tbody
          - @users.each do |user|
            %tr
              %td 
                =user.code
              %td 
                =user.nama
              %td 
                =user.email
              %td 
                =user.no_telp
              %td 
                = link_to 'Edit', edit_user_path(user.id)
                = link_to 'Destroy', user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' }
.container
  .panel.panel-default
    .panel-heading
      %h3.panel-title 
        Schedule List
    .panel-body
      .form-group
        = label_tag :date
        .controls 
          = @schedule.date
      .form-group
        = label_tag :place
        .controls 
          = @schedule.place
      .form-group
        = label_tag :mc_id, 'Pembawa Acara'
        .controls 
          = @schedule.mc.nama
      .form-group
        = label_tag :kultum_id, 'Pemateri Kultum'
        .controls 
          = @schedule.kultum.nama
      .form-group
        = label_tag :materi_kultum_id, 'Materi Kultum'
        .controls 
          = "#{@schedule.materi_kultum.title} (#{@schedule.materi_kultum.tipe})"
      .form-group
        = label_tag :talaqi_id, 'Talaqi'
        .controls 
          = @schedule.talaqi.nama
      .form-group
        = label_tag :materi_talaqi_id, 'Materi Talaqi'
        .controls 
          = "#{@schedule.materi_talaqi.title} (#{@schedule.materi_talaqi.tipe})"
      .form-group
        = label_tag :doa_id, 'Pemimpin Doa'
        .controls 
          = @schedule.doa.nama
      .form-group
        = link_to 'Back', schedules_path, class: 'btn btn-default'
